<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alshahari.crezy.grand_r.MainActivity">

   <RadioGroup
       android:layout_marginLeft="250dp"
       android:layout_marginTop="80dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/group_radio">

       <RadioButton
           android:id="@+id/male_radio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="male" />

       <RadioButton
           android:id="@+id/fimail_radio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="fimale" />
   </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginTop="27dp"
        android:text="Grander"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner-id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/group_radio"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/spinner-id"
        android:layout_alignStart="@+id/spinner-id"
        android:text="Data brydiy"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="Day"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/group_radio"
        android:layout_alignEnd="@+id/spinner-id"
        android:layout_alignRight="@+id/spinner-id"
        android:text="month"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner-id"
        android:layout_alignStart="@+id/spinner-id"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/spinner_month"
        android:layout_marginTop="23dp"
        android:text="Yaer" />

    <Spinner
        android:id="@+id/spinner_Yaer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/btn_copleeted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinner_Yaer"
        android:layout_marginTop="38dp"
        android:text="copleted"
        />

</RelativeLayout>
